<%- include('./partials/head') %>
<title>Red Pers - Artikelen door <%= posts[0].yoast_head_json.author %></title>
</head>

<%- include('./partials/header') %>
<body>

    <main>
        <h2>Artikelen door <%= posts[0].yoast_head_json.author %></h2>

        <section class="posts">
        <%
            posts
            .forEach((post) => {
                %>
                <article class="post">
                    <a href="/post/<%= post.slug %>" class="article-link">
                        <img src="<%= post.yoast_head_json.og_image[0].url %>"></img>
                        <h3><%- post.title.rendered %></h3>
                    </a>
                    <a class="author" href="/author/<%= post.author %>"><%= post.yoast_head_json.author %></a>
                </article>
                <%
            })
        %>
        </section>

    </main>

    <%- include('./partials/footer') %>
